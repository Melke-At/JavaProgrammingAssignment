<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controller.NoteController"
      spacing="10" alignment="TOP_CENTER" prefWidth="400" prefHeight="500">

    <TextField fx:id="titleField" promptText="Enter note title" />
    <TextArea fx:id="contentArea" promptText="Write your note here..." prefRowCount="5"/>
    <Button fx:id="addButton" text="Add" />
    <Label text="Saved Notes:" />
    <TextArea fx:id="notesDisplay" editable="false" prefRowCount="15"/>
</VBox>
